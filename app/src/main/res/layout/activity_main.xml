<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:shrinkColumns="1"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="QA Editoin"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h2"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="50dp"
                app:fontAwesomeIcon="fa_android"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapButtonGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical"
                android:text="BootstrapButtonGroup"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:roundedCorners="true">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    app:bootstrapText="{fa-map-marker}  Your location"
                    android:id="@+id/onMapReady"/>

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    app:bootstrapText="{fa-google}  Web View"
                    android:id="@+id/onWebView"/>
            </com.beardedhen.androidbootstrap.BootstrapButtonGroup>


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/myEditText"
                android:hint="@string/id_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/send_button"
                android:text="@string/button_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/billingCost"
                android:layout_marginTop="20dp"
                android:height="50dp"
                android:onClick="setUserId"
                android:textStyle="bold"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:bootstrapText="{fa-rotate-right}  Set UserId"
                app:buttonMode="regular"
                app:roundedCorners="true" />


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/myEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Set Key"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/send_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/billingCost"
                android:layout_marginTop="20dp"
                android:height="50dp"
                android:onClick="setUserId"
                android:textStyle="bold"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:bootstrapText="{fa-rotate-right}  Set Key"
                app:buttonMode="regular"
                app:roundedCorners="true" />


            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/myEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Set value"
                app:bootstrapBrand="info"
                app:bootstrapSize="lg" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/send_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/billingCost"
                android:layout_marginTop="20dp"
                android:height="50dp"
                android:onClick="setUserId"
                android:textStyle="bold"
                app:bootstrapBrand="success"
                app:bootstrapSize="lg"
                app:bootstrapText="{fa-rotate-right}  Set value"
                app:buttonMode="regular"
                app:roundedCorners="true" />
        </TableLayout>


    </ScrollView>
    <TextView
        android:text="Test GPS"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view1"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textColor="#44f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_view2"
        android:textSize="20sp"
        android:textColor="#f44"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</TableLayout>




